	
.sandwich
	position relative
	display inline-block
	vertical-align middle
	margin-right 15px 
	width 50px
	height 50px
	border 2px solid #fff
	border-radius 50px
	&.active	
		.sandwich-line--top
			top 21px
			transform rotate(45deg)
			
		.sandwich-line--middle
			opacity 0
			 
		.sandwich-line--bottom
			top 21px
			transform rotate(-45deg)
			
	
.sandwich-line
	position absolute
	left 50%
	margin-left -12.5px
	display block
	width 25px
	height 4px
	background-color #fff
	transition all linear .5s
	
	
.sandwich-line--top
	top 13px
	
.sandwich-line--middle
	top 21px
	opacity 1
	 
.sandwich-line--bottom
	top 29px
	
.g-btn
	display inline-block
	height 30px
	// line-height 26px
	padding 0 20px
	border 1px solid #fff 
	border-radius 20px
	color #FFF 
	background-color mainColor
	cursor pointer
	transition all linear .3s
	
	&:hover
		background-color #FFF
		color mainColor 
		

.g-section-title
	margin-bottom 30px
	text-align center
	font-size 42px
	color mainColor
	font-family titleFont 
	
	&.g-section-title--white
		color #FFF 
	
.instagram-text
	position relative
	display inline-block
	font-size 24px
	font-family boldFont
	color mainColor 
	
	&:before
		content ''
		display inline-block
		vertical-align middle
		margin-right 15px
		width 35px
		height 35px
		background #fff url('../img/svg/instagram-color.svg') 0 0 no-repeat