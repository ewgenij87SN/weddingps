.services
	background url('../img/general/services-bg.jpg') 0 0 no-repeat
	background-size cover
	color #FFF 

	&:before
		content ''
		display block
		position absolute
		top -1px
		left 0
		right 0
		width 100%
		height 21px
		background url('../img/general/wave-top-white.png') 0 0 no-repeat 
	
	.container
		display flex
		flex-wrap wrap 
		justify-content space-around
		
	.g-section-title
		width 100%
		
.service-item
	position relative
	flex-basis auto
	width 40%
	min-height 165px
	margin 0 15px 50px 
	padding-left 175px 
	
	&.service-item--center
		width 30%
		
	&:before
		content ''
		position absolute
		left 0
		display block
		height 165px
		width 165px
		
.service-item__title
	display block
	margin-bottom 10px
	font-size 24px
	font-family boldFont
	
.service-item__text
	line-height 1.2
	 

.service-item--organization
	
	&:before
		background url('../img/content/services/organization.png') 0 0 no-repeat

