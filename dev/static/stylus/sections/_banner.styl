.banner
	padding 70px
	background url('../img/content/banner.jpg') center no-repeat
	background-size cover
	
	&:after
		content ''
		display block
		position absolute
		bottom 0
		left 0
		right 0
		width 100%
		height 20px
		background url('../img/general/wave-bottom-white.png') 0 0 no-repeat 
	
	.container
		display flex
		justify-content center
		align-items flex-end
		height 550px
	
.banner-text
	text-align center
	font-size 30px
	font-family boldFont
	line-height 1.4 
	color #FFF 
	
	